{
	"extends": ["//"],
	"tasks": {
		// Default overrides
		"build": {
			"dependsOn": ["build:internal", "build:main"],
		},

		// Special tasks
		"build:main": {
			"inputs": ["src/**"],
			"dependsOn": ["build:internal"],
			"outputs": ["dist/**"],
		},
		"build:internal": {
			"inputs": ["src-internal/**"],
			"outputs": ["dist-internal/**"],
		},
	},
}
