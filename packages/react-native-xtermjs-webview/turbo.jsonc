{
	"extends": ["//"],
	"tasks": {
		// Default overrides
		"build": {
			"dependsOn": ["build:internal", "build:main"],
		},

		// Special tasks
		"build:main": {
			"inputs": ["src/**", "vite.config.ts"],
			"dependsOn": ["build:internal"],
			"outputs": ["dist/**"],
		},
		"build:internal": {
			"inputs": ["src-internal/**", "index.html", "vite.config.internal.ts"],
			"outputs": ["dist-internal/**"],
		},
	},
}
